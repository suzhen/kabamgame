= simple_form_for(@city,:html=>{:class=>'form-horizontal'}) do |f|
  = f.error_notification       
  
  .form-inputs                 
    = f.input :name
    = f.input :coordinate,:as=>:integer
    - unless @city.new_record?
      = f.input :taxrate           
      = f.input :capital
  .form-actions                
    = f.button :submit

